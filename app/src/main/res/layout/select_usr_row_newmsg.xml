<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toStartOf="@+id/selectusr_usrname"
            android:layout_marginEnd="16dp"
            android:id="@+id/selectusr_usrpic" app:layout_constraintHorizontal_bias="0.221"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/selectusr_usrname"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="116dp"
            android:textSize="18sp"
            android:textStyle="bold" app:layout_constraintBottom_toBottomOf="@+id/selectusr_usrpic"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/selectusr_usrpic"
            app:layout_constraintStart_toEndOf="@+id/selectusr_usrpic"/>
</android.support.constraint.ConstraintLayout>