<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@android:color/holo_orange_light">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_corners"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="16dp"

            android:id="@+id/email_login_field"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_margin="32dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners"
            android:ems="10"
            android:paddingLeft="16dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/pass_login_field"
            app:layout_constraintStart_toStartOf="@+id/email_login_field"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_login_field"
            app:layout_constraintEnd_toEndOf="@+id/email_login_field"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/login_btn"
            app:layout_constraintStart_toStartOf="@+id/pass_login_field"
            app:layout_constraintEnd_toEndOf="@+id/pass_login_field"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/pass_login_field"
            android:background="@drawable/round_btn"/>

    <TextView
            android:id="@+id/back_to_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to registration"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/login_btn" app:layout_constraintEnd_toEndOf="@+id/login_btn"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/login_btn"/>

</android.support.constraint.ConstraintLayout>